{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"paths": {
			"$components/*": ["src/components/*"],
			"$icons/*": ["src/icons/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$db/*": ["src/db/*"],
			"$store/*": ["src/store/*"]
		}
	}
}
